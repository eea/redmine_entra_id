<p>
    <%= label_tag "settings[enabled]", l(:entra_id_enabled) %>
    <%= check_box_tag 'settings[enabled]', true, EntraId.enabled? %>
    <em class="info"><%= l(:entra_id_enabled_info) %></em>
</p>
<p>
    <%= label_tag "settings[exclusive]", l(:entra_id_exclusive) %>
    <%= check_box_tag 'settings[exclusive]', true, EntraId.exclusive? %>
    <em class="info"><%= l(:entra_id_exclusive_info) %></em>
</p>
<p>
    <label><%= l(:entra_id_client_id) %></label>
    <strong><code><%= EntraId.client_id || "(not set)" %></code></strong>
    <em class="info">Set via ENTRA_ID_CLIENT_ID environment variable</em>
</p>
<p>
    <label><%= l(:entra_id_client_secret) %></label>
    <strong><code><%= EntraId.masked_client_secret.presence || "(not set)" %></code></strong>
    <em class="info">Set via ENTRA_ID_CLIENT_SECRET environment variable</em>
</p>
<p>
    <label><%= l(:entra_id_tenant_id) %></label>
    <strong><code><%= EntraId.tenant_id || "(not set)" %></code></strong>
    <em class="info">Set via ENTRA_ID_TENANT_ID environment variable</em>
</p>
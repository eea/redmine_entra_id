    <em class="info"><%= l(:entra_id_client_secret_info) %></em>
</p>
<p>
    <label><%= l(:entra_id_tenant_id) %></label>
    <strong><code><%= EntraId.tenant_id || l(:entra_id_not_set) %></code></strong>
    <em class="info"><%= l(:entra_id_tenant_id_info) %></em>
</p>